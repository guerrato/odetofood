@page
@model ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" autofocus />
            <span class="input-group-btn">
                <button class="form-control btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
<table class="table">
    @foreach(var r in Model.Restaurants)
    {
        <tr>
            <td>@r.Name</td>
            <td>@r.Location</td>
            <td>@r.Cuisine</td>
            <td><a asp-page="./Detail" asp-route-restaurantId="@r.Id"><i class="fas fa-search-plus"></i></a></td>
            <td><a asp-page="./Edit" asp-route-restaurantId="@r.Id"><i class="fas fa-edit"></i></a></td>
        </tr>
    }

</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>

<p>@Model.Message</p>